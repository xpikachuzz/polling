model Poll {
    id            Int                     @id @default(autoincrement())
    title         String
    choices       Choice[]
    duration      Int
    createdAt     DateTime                @default(now())
}

model Choice {
    id            Int                     @id @default(autoincrement())
    prompt        String
    count         Int                     @default(0)
    Poll          Poll                    @relation(fields: [PollId], references: [id])
    PollId        Int
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
